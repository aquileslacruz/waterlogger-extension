{
	"manifest_version": 2,
	"name": "WaterLogger",
	"short_name": "WaterLogger",
	"version": "1.0.0",
	"description": "A simple logger for your drinking habits",
	"icons": {
		"16": "popup/icons/16.png",
		"32": "popup/icons/32.png",
		"128": "popup/icons/128.png"
	},
	"browser_action": {
		"default_title": "WaterLogger",
		"default_popup": "popup/index.html",
		"default_icon": {
			"16": "popup/icons/16.png",
			"32": "popup/icons/32.png",
			"128": "popup/icons/128.png"
		}
	},
	"options_page": "admin/index.html",
	"permissions": ["storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	}
}
