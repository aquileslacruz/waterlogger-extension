{
	"manifest_version": 2,
	"name": "WaterLogger",
	"short_name": "WaterLogger",
	"version": "1.0.0",
	"description": "A simple logger for your drinking habits",
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"128": "icons/128.png"
	},
	"browser_action": {
		"default_title": "WaterLogger",
		"default_popup": "index.html"
	},
	"permissions": ["storage"]
}
